        </Logger>
        
        <!-- JUL Logger (Java Util Logging) -->
        <Logger name="java.util.logging" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAppender"/>
        </Logger>
        
        <!-- JCL Logger (Jakarta Commons Logging) -->
        <Logger name="org.apache.commons.logging" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
