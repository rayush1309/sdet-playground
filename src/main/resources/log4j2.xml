        </Logger>
        
        <!-- Test Containers Logger (if using database testing) -->
        <Logger name="org.testcontainers" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAppender"/>
        </Logger>
        
        <!-- MySQL Logger -->
        <Logger name="com.mysql" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAppender"/>
        </Logger>
        
        <!-- HikariCP Logger (connection pool) -->
        <Logger name="com.zaxxer.hikari" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAppender"/>
        </Logger>
        
        <!-- Spring Logger (if using Spring framework) -->
        <Logger name="org.springframework" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAppender"/>
        </Logger>
        
        <!-- JUnit Logger -->
        <Logger name="junit" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAppender"/>
        </Logger>
        
        <!-- Apache Commons Logger -->
        <Logger name="org.apache.commons" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAppender"/>
        </Logger>
        
        <!-- Gson Logger (if using Gson) -->
        <Logger name="com.google.gson" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAppender"/>
        </Logger>
        
        <!-- OkHttp Logger (if using OkHttp) -->
        <Logger name="okhttp3" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
